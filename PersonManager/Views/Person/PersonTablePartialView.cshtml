@using PersonManager.Models
@model PersonManager.Models.Person

<h1 class="alert alert-info">@ViewBag.Title</h1>
<table class="table table-striped table-bordered table-hover">
<thead>
<tr>
    <th><b>FirstName</b></th>
    <th><b>LastName</b></th>
    <th><b>Email</b></th>
    <th><b>PhoneNo</b></th>
    <th><b>Action</b></th>
</tr>
</thead>
<tbody>
@foreach (Person person in ViewBag.PersonList)
{
    <tr>
        <td>
            @person.FirstName
        </td>
        <td>
            @person.LastName
        </td>
        <td>
            @person.Email
        </td>
        <td>
            @person.PhoneNo
        </td>
        <td>
            
            @Html.ActionLink("Delete", "Delete", "Person", new {id= person.Id},new { @class ="btn btn-warning glyphicon glyphicon-trash"})


            @Html.ActionLink("Edit", "Edit", "Person", new {id= person.Id},new { @class = " btn btn-primary glyphicon glyphicon-pencil"})

        </td>
    </tr>
}
</tbody>
</table>
